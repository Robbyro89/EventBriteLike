<table class="table">
  <thead>
    <tr>
      <th style="color: #FFFFFF"><b>Lieu</b></th>
      <th style="color: #FFFFFF"><b>Date</b></th>
      <th style="color: #FFFFFF"><b>Cr√©ateur</b></th>
      <th style="color: #FFFFFF"><b>Action(s)</b></th>
    </tr>
  </thead>

  <tbody>
    <% if !@events.nil? %>
      <% @events.past.each do |event| %>
        <tr>
          <td style="color: #FFFFFF"><%= event.place %></td>
          <td style="color: #FFFFFF"><%= event.date.strftime("%d-%b-%Y") %></td>
          <td style="color: #FFFFFF"><%= event.creator.name %></td>
          <% if logged_in? %>
          <td><%= link_to 'Visionner', event, :class=>"btn btn-sm btn-outline", :method=>:get, :id=>"voir" %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
